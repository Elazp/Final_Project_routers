  <h1 class="index_title">ADD NEW ROUTE</h1>
	<div class="container">
    	<div class="row">

     <div class="col-md-4 col-sm-5 col-xs-12">
    <br><br>
    <section id="add_new">
	<%= form_for @route do |f| %>
	 <%= f.label :route_name %>
	 <%= f.text_field :route_name %>
	 <br>
	 <%= f.label :route_country %>
	 <%= f.text_field :route_country %>
	 <br>
	 <%= f.label :route_description %>
	 <%= f.text_field :route_description %>
	 <br>
	 <%= f.label :route_date %>
	 <%= f.date_select :route_date, :order =>[:day, :month, :year] %>
	  <br>
	 <%= f.label :route_photo %>
	 <%= f.text_field :route_photo %>

	 <%= f.submit 'Save' %>

 	

	<p><%= link_to('Back', routes_path)%></p>
	<% end %>
	</section>
